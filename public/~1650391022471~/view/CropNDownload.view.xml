<mvc:View 
    controllerName="com.perezjquim.ytc.pwa.controller.CropNDownload" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc">
    <Page 
    	title="{i18n>CropNDownload}">

        <Wizard 
            id="ytc-wizard"
            stepActivate="onPrepareVideo">
            <WizardStep
                title="{i18n>step_params}"
                validated="{= !!${video_info>/author} }">    
                <f:SimpleForm 
                    visible="{= ${misc>/is_fetching_video_info} || !!${video_info>/author} }"
                    busy="{misc>/is_fetching_video_info}">
                    <f:content>
                        <Label text="{i18n>title}"/>
                        <Text text="{video_info>/title}"/>
                        <Label text="{i18n>author}"/>
                        <Text text="{video_info>/author}"/>  
                        <Label text="{i18n>thumbnail}"/>
                        <Image height="20vh" src="{video_info>/thumbnail_url}"/>                               
                        <Label text="{i18n>duration}" />
                        <Text text="{video_info>/duration}"/>   
                    </f:content>
                </f:SimpleForm>
                <f:SimpleForm 
                    editable="true">
                    <f:content>
                        <Label text="{i18n>url}"/>
                        <Input value="{prompt>/url}" change="onParamChanged"/>
                        <Label text="{i18n>start_time}"/>
                        <MaskInput mask="TT:TT" placeholderSymbol="_" value="{prompt>/start_time}" change="onParamChanged">
                            <rules>
                                <MaskInputRule maskFormatSymbol="T" regex="[0-9]"/>
                            </rules>
                        </MaskInput>
                        <Label text="{i18n>end_time}"/>
                        <MaskInput mask="TT:TT" placeholderSymbol="_" value="{prompt>/end_time}" change="onParamChanged">
                            <rules>
                                <MaskInputRule maskFormatSymbol="T" regex="[0-9]"/>
                            </rules>
                        </MaskInput>
                        <Label text="{i18n>split}"/>
                        <HBox justifyContent="SpaceBetween">                    
                            <CheckBox selected="{prompt>/split}" select="onParamChanged"/>
                            <MaskInput visible="{prompt>/split}" mask="TT:TT" placeholderSymbol="_" value="{prompt>/split_interval}" change="onParamChanged">
                                <rules>
                                    <MaskInputRule maskFormatSymbol="T" regex="[0-9]"/>
                                </rules>
                            </MaskInput>                          
                        </HBox>
                    </f:content>
                </f:SimpleForm>   
            </WizardStep>
            <WizardStep 
                title="{i18n>step_preview+dl}"
                validated="false"> 
                <f:SimpleForm
                    visible="{= !!${video_info>/author} }">
                    <f:content>
                        <List items="{video_blobs>/}">
                            <CustomListItem>
                                <HBox 
                                    justifyContent="SpaceBetween"
                                    alignItems="Center">   
                                    <core:HTML content="&lt;video class='z_video_preview' src='{video_blobs>blob_url}' controls /&gt;"/>
                                    <Button 
                                        icon="sap-icon://download" 
                                        press="onPressDownload"
                                        type="Emphasized" />
                                </HBox>  
                            </CustomListItem>
                        </List>                    
                    </f:content>
                </f:SimpleForm>  
            </WizardStep>                                    
        </Wizard>
    </Page>
</mvc:View>