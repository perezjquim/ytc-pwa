<mvc:View 
    controllerName="com.perezjquim.ytc.pwa.controller.Home" 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc">
    <Page 
    	title="{i18n>Home}">
        <f:SimpleForm 
        	editable="true">
            <f:content>
                <Label text="{i18n>url}"/>
                <Input value="{prompt>/url}"/>
                <Label text="{i18n>start_time}"/>
                <MaskInput mask="TT:TT:TT" placeholderSymbol="_" value="{prompt>/start_time}">
                    <rules>
                        <MaskInputRule maskFormatSymbol="T" regex="[0-9]"/>
                    </rules>
                </MaskInput>
                <Label text="{i18n>duration}"/>
                <MaskInput mask="TT:TT:TT" placeholderSymbol="_" value="{prompt>/duration}">
                    <rules>
                        <MaskInputRule maskFormatSymbol="T" regex="[0-9]"/>
                    </rules>
                </MaskInput>
                <Label text="{i18n>download}"/>
                <HBox justifyContent="SpaceBetween">                    
                    <Button 
                    	icon="sap-icon://download" 
                    	press="onPressDownload"
                    	type="Emphasized" />
                </HBox>
            </f:content>
        </f:SimpleForm>           
    </Page>
</mvc:View>